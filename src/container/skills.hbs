{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>

{{#with main}}
    <main>
        <div>
            <a href="/"class="btn btn-warning m-4 p-2">Головна</a>
        </div>
        <section class="row">
            <div class="col-6">
                <div class="card">
                {{>title data="All skills" big=true}}
           
                <ul>
                    {{#each skills}}
                    <li>
                        {{name}}
                    
                        {{#if point includeZero=true}}({{point}}){{/if}}
                        {{#if isTop}}(TOP){{/if}}
                        {{#unless point includeZero=true}}(not learning it){{/unless}}
                        {{#unless point}}
                            {{#if point includeZero=true}}
                                (Still learning)
                            {{/if}}
                        {{/unless}}
                    </li>
                    {{/each}}
                </ul>
                </div>
             </div>
            <div class="col-6">
                <div class="card">
                {{>title data="My hobbies" big=false}}
                <ol>
                    {{#each hobbies}}
                    <li>
                        {{name}}
                        {{#if isMain}}(favourite){{/if}}
                    </li>
                    {{/each}}
                </ol>
                </div>
            </div>
        </section>
    </main>
{{/with}}
    
</div>

